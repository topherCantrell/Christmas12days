PlayDay:
$current = $day

if($day == 1) {
  CALL OnTheFirstDay
  CALL One
} else {
'* MUSIC
' VOICE 5 // -------------------------------------------
' 8D4 D  |  4D 8G G 4G 8F# G  |  A B C+ A- 4.B 8R |   // 8C+
' VOICE 0 // -------------------------------------------
' 8D4 D  |  4D 8G G 4G 8F# G  |  A B C+ A- 2B
' VOICE 1 // -------------------------------------------
' 4R  |  2B3 D+  |  F#    D
' VOICE 2 // -------------------------------------------
' 4R  |  2R  2B3  |  D+    B-
' VOICE 3 // -------------------------------------------
' 4R  |  2G2 4G 4A  |  2D+   2G
' VOICE 4 // -------------------------------------------
' 4R  |  1R  |  1R
' VOICE * // -------------------------------------------
' 8X 8X | 8X 8X 8X 8X 8X 8X 8X 8X | 8X 8X 8X 8X 8X 8X 8X 8X
}

while($current>5) {
  CALL SixThroughTwelve
  $current = $current - 1
}

if($current==5) {
  CALL Five
  $current = $current - 1
}

if($day<5) {
  if($current==2) {
    CALL TwoBefore
  }
  if($current==3) {
    CALL ThreeBefore
  }
  if($current==4) {
    CALL FourBefore
  }
} else {
  if($current==2) {
    CALL TwoAfter
  }
  if($current==3) {
    CALL ThreeAfter
  }
  if($current==4) {
    CALL FourAfter
  }
}

RETURN

TwelveDays:
for($day=1;$day<13;$day=$day+1) {
  CALL PlayDay
}
STOP


